<ul class="items__list items__list--armor">
  <li class="items__list-item items__list-item--header">
    <div class="items__list-column items__list-column--equipped">
      Eq.
    </div>

    <div class="items__list-column items__list-column--name">
      Name
    </div>

    <div class="items__list-column items__list-column--type">
      Type
    </div>

    <div class="items__list-column items__list-column--ac">
      AC
    </div>
  </li>
  {{#each armor as |item id|}}
    <li
      class="items__list-item items__list-item"
      data-armor-type="{{item.data.armorType}}"
      data-item-id="{{item._id}}">
      <div class="items__list-column items__list-column--equipped">
        <input
          type="checkbox"
          name="data.equipped"
          {{optionalAttr "disabled" (equals )}}
          {{checked item.data.equipped}} />
      </div>

      <div class="items__list-column items__list-column--name">
        {{item.name}}
      </div>

      <div class="items__list-column items__list-column--type">
        {{dynamicProp ../armorTypes item.data.armorType}}
      </div>

      <div class="items__list-column items__list-column--ac">
        {{signedString item.data.ac}}
      </div>

      {{> "systems/chromatic-dungeons/templates/actor/parts/grids/item-grid-actions.hbs"}}
    </li>
  {{/each}}
</ul>