<ul class="items__list items__list--wealth">
  <li class="items__list-item items__list-item--header">
    <div class="items__list-column items__list-column--name">
      Name
    </div>

    <div class="items__list-column items__list-column--quantity">
      Qty.
    </div>

    <div class="items__list-column items__list-column--quantity">
      Eq.
    </div>
  </li>
  {{#each wealth as |item id|}}
    <li
      class="items__list-item items__list-item"
      data-item-id="{{item._id}}">
      <div class="items__list-column items__list-column--name">
        {{item.name}}
      </div>

      <div class="items__list-column items__list-column--quantity">
        <input
          type="text"
          readonly
          value="{{item.quantity.value}}"
          name="data.quantity.value" />
      </div>

      <div class="items__list-column items__list-column--equipped">
        <input
          type="checkbox"
          name="data.equipped"
          {{checked item.data.equipped}} />
      </div>
    </li>
  {{else}}
    <li class="items__list-item items__list-item--empty">
      <span>Empty</span>
    </li>
  {{/each}}
</ul>