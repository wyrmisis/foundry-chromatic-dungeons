<div class="message-content mesage-content--attack">
  {{#if damage}}
    {{#if critical.success}}
      <h2>Critical Hit!</h2>
    {{else}}
      <h2>Attack</h3>
    {{/if}}
  {{else}}
    {{#if critical.failure}}
      <h2>Critical Miss!</h3>
    {{else}}
      <h2>Miss!</h3>
    {{/if}}
  {{/if}}
  <div class="dice-roll dice-roll__attack">
    <div class="dice-result">
      <div class="dice-formula">
        {{attack.formula}}  
      </div>
      {{{attack.tooltip}}}
      <div class="dice-total">
        {{attack.total}}
      </div>
    </div>
  </div>
  
  {{#if damage}}
    <h2>Damage</h2>
    <div class="dice-roll dice-roll__damage">
      <div class="dice-result">
        <div class="dice-formula">
          {{damage.formula}}  
        </div>
        {{{damage.tooltip}}}
        <div class="dice-total">
          {{damage.total}}
        </div>
      </div>
    </div>
  {{/if}}

  {{#if crit}}
    <h2>{{localize (concat 'CRITICAL.Header.' crit.effect)}}</h2>
    <p>{{localize (concat 'CRITICAL.Body.' crit.effect)}}</p>
    {{#if crit.total}}
      <div class="dice-roll dice-roll__crit">
        <div class="dice-result">
          <div class="dice-formula">
            {{crit.formula}}  
          </div>
          {{{crit.tooltip}}}
          <div class="dice-total">
            {{crit.total}}
          </div>
        </div>
      </div>
    {{/if}}
  {{/if}}
</div>
