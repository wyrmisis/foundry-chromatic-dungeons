<h2>Effects

{{#each effects as |section sid|}}
  <h3>{{localize section.label}}</h3>

  <ul
    class="effects-list"
    data-effect-type="{{section.type}}">
    <li class="effects-list__list-item effects-list__list-item--header">
      <div class="effects-list__icon"></div>
      <div class="effects-list__name">Name</div>
      <div class="effects-list__source">Source</div>
      <div class="effects-list__duration">Duration</div>
      <div class="effects-list__controls">
        <button
          type="button"
          class="effect-control"
          data-action="create"
          title="{{localize 'BOILERPLATE.EffectCreate'}}">
          <i class="fas fa-plus">
            <span class="sr-only">
              {{localize "BOILERPLATE.Add"}}
            </span>
          </i>
        </button>
      </div>
    </li>
    {{#each section.effects as |effect|}}
      <li
        data-effect-id="{{effect.id}}"
        class="effects-list__list-item effects-list__list-item--header">
        <div class="effects-list__icon">
          <img
            class="item-image"
            src="{{effect.data.icon}}"/>
        </div>
        <div class="effects-list__name">{{effect.data.label}}</div>
        <div class="effects-list__source">{{effect.sourceName}}</div>
        <div class="effects-list__duration">{{effect.duration.label}}</div>
        <div class="effects-list__controls">
          <button
            type="button"
            class="effect-control"
            data-action="toggle"
            title="{{localize 'BOILERPLATE.EffectToggle'}}">
            <i class="fas {{#if effect.data.disabled}}fa-check{{else}}fa-times{{/if}}"></i>
          </button>
          <button
            type="button"
            class="effect-control"
            data-action="edit"
            title="{{localize 'BOILERPLATE.EffectEdit'}}">
            <i class="fas fa-edit"></i>
          </button>
          <button
            type="button"
            class="effect-control"
            data-action="delete"
            title="{{localize 'BOILERPLATE.EffectDelete'}}">
            <i class="fas fa-trash"></i>
          </button>
        </div>
      </li>
    {{/each}}
  </ul>
{{/each}}

