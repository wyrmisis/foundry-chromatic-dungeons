<header class="sheet-header npc-header">
  <div class="sheet-header__container">
    <input
      class="name"
      name="name"
      type="text"
      value="{{actor.name}}"
      placeholder="Name"/>
      
    <select name="system.type" data-dtype="string">
      {{#select data.type}}
        {{#each monsterTypes as |name key|}}
          <option value="{{key}}">{{name}}</option>
        {{/each}}
      {{/select}}
    </select>

    <div class="hp">
      <label 
        for="hp.value"
        class="hp__label"
        title="HP: {{data.hp.value}}/{{data.hp.max}}
({{data.calculatedHitDice}}d{{data.hitDieSize}}{{#if data.hitDiceBonus}}+{{data.hitDiceBonus}}{{/if}})">
        <i class="fa fa-heart">
          <span class="sr-only">
            {{localize "SHEET.hp"}}
          </span>
        </i>
      </label>

      {{#if data.canAutocalculateHP}}
        {{#if actor.isToken}}
          <input
            class="min-hp"
            type="number"
            name="system.hp.value"
            value="{{data.hp.value}}"
            max="{{data.hp.max}}"
            data-dtype="Number"/>
          <span>/</span>
          <input
            type="number"
            name="system.hp.max"
            min="{{data.hp.value}}"
            value="{{data.hp.max}}"
            data-dtype="Number" />
        {{else}}
          <input
            type="text"
            readonly
            value="{{data.calculatedHitDice}}d{{data.hitDieSize}}" />
        {{/if}}
      {{else}}
        <input
            type="number"
            class="min-hp"
            name="system.hp.value"
            value="{{data.hp.value}}"
            max="{{data.hp.max}}"
            data-dtype="Number"/>
          <span>/</span>
          <input
            type="number"
            name="system.hp.max"
            min="{{data.hp.value}}"
            value="{{data.hp.max}}"
            data-dtype="Number" />
      {{/if}}
      
      
    </div>

    <div class="ac">
      <label 
        for="ac"
        class="ac__label">
        <i class="fa fa-shield-alt">
          <span class="sr-only">
            {{localize "SHEET.ac"}}
          </span>
        </i>
      </label>
      <input
        type="number"
        name="ac"
        value="{{data.ac}}"
        readonly
        data-dtype="Number"/>
    </div>

    <div class="xp">
      <label 
        for="xp"
        class="xp__label">
        <i class="fa fa-level-up-alt">
          <span class="sr-only">
            {{localize "SHEET.xp"}}
          </span>
        </i>
      </label>
      {{#if data.canAutocalculateXP}}
        <input
          type="number"
          name="xp"
          value="{{data.calculatedXP}}"
          readonly
          data-dtype="Number"/>
      {{else}}
        <input
          type="number"
          name="xp"
          value="{{data.xp}}"
          readonly
          data-dtype="Number"/>
      {{/if}}
    </div>
  </div>
</header>