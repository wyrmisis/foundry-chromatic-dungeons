<section class="items">
  {{#if carryWeight}}
  <div class="items__carry-weight">
    <label for="">Carry weight:</label>
    <input value="{{carryWeight.value}}" readonly /> / <input value="{{carryWeight.max}}" readonly />
  </div>
  {{/if}}

  {{#if data.treasure}}
    <h3>Treasure</h3>
    {{editor
      content=data.treasure
      target="data.treasure"
      rollData=rollData
      button=true
      owner=owner
      editable=editable
    }}
  {{/if}}

  <h3 class="action-header">
    <span>Weapons</span>
    <button type="button" data-item-action="create" data-item-type="weapon">
      <i class="fa fa-plus">
        <span class="sr-only">Add New Weapon</span>
      </i>
    </button>
  </h3>
  {{> "systems/foundry-chromatic-dungeons/templates/actor/parts/grids/actor-weapon-grid.hbs"}}

  <h3 class="action-header">
    <span>Armor</span>
    <button type="button" data-item-action="create" data-item-type="armor">
      <i class="fa fa-plus">
        <span class="sr-only">Add New Armor</span>
      </i>
    </button>
  </h3>
  {{> "systems/foundry-chromatic-dungeons/templates/actor/parts/grids/actor-armor-grid.hbs"}}

  <h3 class="action-header">
    <span>Gear</span>
    <button type="button" data-item-action="create" data-item-type="gear">
      <i class="fa fa-plus">
        <span class="sr-only">Add New Gear Item</span>
      </i>
    </button>
  </h3>
  {{> "systems/foundry-chromatic-dungeons/templates/actor/parts/grids/actor-gear-grid.hbs"}}

  <h3 class="action-header">
    <span>Wealth</span>
    <button type="button" data-item-action="create" data-item-type="treasure">
      <i class="fa fa-plus">
        <span class="sr-only">Add New Treasure Item</span>
      </i>
    </button>
  </h3>
  {{> "systems/foundry-chromatic-dungeons/templates/actor/parts/grids/actor-wealth-grid.hbs"}}

  {{#if data.wealth}}
    <h3>Currency</h3>
    <div class="items__currency">
      {{#each data.wealth as |value key|}}
        <div class="items__currency-item items__currency-item--{{key}}">
          <label for="data.wealth.{{key}}">{{key}}</label>
          <input
            type="number"
            data-dtype="Number"
            name="data.wealth.{{key}}"
            value={{value}} />
        </div>
      {{/each}}
    </div>
  {{/if}}
</section>