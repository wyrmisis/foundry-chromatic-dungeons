<header class="sheet-header">
    <div class="sheet-header__container">
      <input
        class="name"
        name="name"
        type="text"
        value="{{actor.name}}"
        placeholder="Name"/>

      <div class="hp">
        <label 
          for="system.hp.value"
          class="hp__label">
          <i class="fa fa-heart">
            <span class="sr-only">
              {{localize "SHEET.hp"}}
            </span>
          </i>
        </label>
        <input
          type="number"
          name="system.hp.value"
          value="{{actor.system.hp.value}}"
          max="{{hp.max}}"
          data-dtype="Number"/>
        <span>/</span>
        <input
          type="number"
          name="system.hp.max"
          min="{{actor.system.hp.value}}"
          value="{{actor.system.hp.max}}"
          data-dtype="Number" />
      </div>

      <div class="ac">
        <label 
          for="ac"
          class="ac__label">
          <i class="fa fa-shield-alt">
            <span class="sr-only">
              {{localize "SHEET.ac"}}
            </span>
          </i>
        </label>
        <input
          type="number"
          name="system.ac"
          value="{{actor.system.ac}}"
          readonly
          data-dtype="Number"/>
      </div>

      <div class="move">
        <label 
          for="move"
          class="move__label">
          <i class="fa fa-forward">
            <span class="sr-only">
              Move Speed
            </span>
          </i>
        </label>
        <input
          type="number"
          name="system.move"
          value="{{actor.system.move}}"
          readonly
          data-dtype="Number"/>
      </div>
    </div>
  </header>