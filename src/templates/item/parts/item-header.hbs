<header class="sheet-header">
  <div class="sheet-header__container">
    <img
      class="profile-img inset"
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"/>
    <input
      class="name"
      name="name"
      type="text"
      value="{{item.name}}"
      placeholder="Name"/>
    <div class="sheet-header__quantity">
      <label><span class="sr-only">(Quantity)</span>&times;</label>
      <input
        name="system.quantity.value"
        type="number"
        value="{{item.system.quantity.value}}"
        placeholder="0"/>
    </div>
  </div>
</header>