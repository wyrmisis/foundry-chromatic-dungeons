<header class="sheet-header">
  <div class="sheet-header__container">
    <img
      class="profile-img"
      src="{{item.img}}"
      data-edit="img"
      title="{{item.name}}"/>
    <input
      class="name"
      name="name"
      type="text"
      value="{{item.name}}"
      placeholder="Name"/>
    <div class="sheet-header__quantity">
      <label>&times;<span class="sr-only">(Quantity)</span></label>
      <input
        name="data.quantity.value"
        type="number"
        value="{{data.quantity.value}}"
        placeholder="0"/>
    </div>
  </div>
</header>