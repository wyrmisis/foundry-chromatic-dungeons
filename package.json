{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "CSS compiler for the Boilerplate system",
  "scripts": {
    "build": "npm-run-all -p  build:js build:css",
    "build:js": "rollup --config ./rollup.config.js",
    "build:css": "postcss src/style/index.css -o dist/css/bundle.css",
    "start": "npm-run-all -p watch:js watch:css",
    "watch:js": "rollup --config ./dev.rollup.config.js --watch",
    "watch:css": "postcss src/style/index.css -o dist/css/bundle.css --watch"
  },
  "browserslist": [
    "last 3 versions"
  ],
  "author": "John Doe",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "marked": "^3.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-node-resolve": "^13.0.4",
    "@rollup/plugin-replace": "^3.0.0",
    "@typhonjs-fvtt/eslint-config-foundry.js": "^0.8.0",
    "autoprefixer": "^10.3.6",
    "babel-eslint": "^10.1.0",
    "cq-prolyfill": "^0.4.0",
    "cssnano": "^5.0.8",
    "eslint": "^7.32.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1",
    "postcss-import": "^14.0.2",
    "postcss-inherit": "^4.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-reporter": "^7.0.3",
    "rollup": "^2.56.3",
    "rollup-plugin-copy-assets": "^2.0.3",
    "rollup-plugin-livereload": "^2.0.5",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0"
  }
}
